@model Pigeon.Models.CreateProduct

@{
    ViewData["Title"] = "Utwórz nowy produkt";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateConfirmed" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Opis</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kod kreskowy</label>
                <input asp-for="Barcode" class="form-control" />
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ilość</label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cena</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kategoria</label>

                @{
                    var listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem { Text = "Pieczywo", Value = "Pieczywo" });
                    listItems.Add(new SelectListItem { Text = "Cukiernia", Value = "Cukiernia" });
                    listItems.Add(new SelectListItem { Text = "Nabiał", Value = "Nabiał" });
                    listItems.Add(new SelectListItem { Text = "Warzywniak", Value = "Warzywniak" });
                    listItems.Add(new SelectListItem { Text = "Dania gotowe", Value = "Dania gotowe" });
                    listItems.Add(new SelectListItem { Text = "Słodycze", Value = "Słodycze" });
                    listItems.Add(new SelectListItem { Text = "Ryby", Value = "Ryby" });
                    listItems.Add(new SelectListItem { Text = "Napoje", Value = "Napoje" });
                    listItems.Add(new SelectListItem { Text = "Mrożonki", Value = "Mrożonki" });
                }

                @Html.DropDownListFor(
                    model => model.Category,
                    listItems,
                    "Wybierz kategorię...",
                    new { @class = "form-control" })

                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>